@model PracticeWebApp.Models.SubcategoryCategory

@{
    ViewData["Title"] = "Create";
}

<h1>Створення категорії товару в підкатегорії</h1>

@*<h4>SubcategoryCategory</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductSubcategoryId" class="control-label"></label>
                <select asp-for="ProductSubcategoryId" class ="form-control" asp-items="ViewBag.ProductSubcategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку ктаегорій в підкатегорії</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
