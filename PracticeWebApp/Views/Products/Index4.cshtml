@model IEnumerable<PracticeWebApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<ul class="products clearfix">
    @foreach (var item in Model)
    {
        <li class="product-wrapper">
            <a href="" class="product">
                <div class="product-photo">
                    @*<img src="https://html5book.ru/wp-content/uploads/2015/10/black-dress.jpg" alt="">*@
                    @Html.Raw("<img style='width:240px; height:180px;' src=\"data:image/jpeg;base64,"
                                         + Convert.ToBase64String(item.Image) + "\" />")
                </div>
                @Html.DisplayFor(modelItem => item.Name)
                @Html.DisplayFor(modelItem => item.Price)
            </a>
        </li>
    }
</ul>
