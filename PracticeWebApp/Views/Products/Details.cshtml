    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Image)*@
        </dt>
        <dd class="col-sm-10">
            @Html.Raw("<img style='width:160px; height:120px;' src=\"data:image/jpeg;base64,"
