@model IEnumerable<PracticeWebApp.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Категорії товарів</h1>
@if (User.IsInRole("Адміністратор"))
{
    <p>
        <a asp-action="Create">Створити нову категорію</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                    <a asp-action="Index" asp-controller="ProductSubcategories" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @if (User.IsInRole("Адміністратор"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                        @*<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
